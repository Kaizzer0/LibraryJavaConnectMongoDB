<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.MainController" spacing="8">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="8">
        <Label text="URI:"/>
        <TextField fx:id="uriField" prefWidth="250" />
        <Label text="DB:"/>
        <TextField fx:id="dbField" prefWidth="120" />
        <Label text="Collection:"/>
        <TextField fx:id="collectionField" prefWidth="120" />
        <Button text="Connect" onAction="#onConnect"/>
    </HBox>

    <HBox spacing="8">
        <TextField fx:id="searchField" promptText="search..."/>
        <Button text="Refresh" onAction="#onRefresh"/>
    </HBox>

    <TableView fx:id="table" prefHeight="400">
        <columns>
            <TableColumn fx:id="colCode" text="Code" prefWidth="80"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="220"/>
            <TableColumn fx:id="colCategory" text="Category" prefWidth="120"/>
            <TableColumn fx:id="colDateAdded" text="Date Added" prefWidth="160"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="8">
        <Button fx:id="addButton" text="Add" onAction="#onAdd"/>
        <Button fx:id="updateButton" text="Update" onAction="#onUpdate"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#onDelete"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="btnBorrow" text="Borrow" onAction="#onBorrow"/>
        <Button fx:id="btnReturn" text="Return" onAction="#onReturn"/>
        <Button fx:id="userMgmtButton" text="User Mgmt (Admin)" onAction="#onUserManagement"/>
        <Button fx:id="loginButton" text="Login" onAction="#onLogin"/>
        <Label fx:id="userLabel" text="Not logged in" />
    </HBox>

</VBox>